mixin floating-block()
  .header__content.js-floating-block
    .contacts-header
      a.contacts-header__phone(href='tel:+74951278280')
        +it({
          class: 'contacts-header',
          svg: {
            id: '#phone',
            width: 18,
            height: 18,
          },
          text: '8 (495) 127-82-80',
        })
      .contacts-header__buttons
        +button-color({
          text: 'Напишите нам',
        })
        +button-color({
          it:{
            class: 'button-color',
            svg: {
              id: '#person',
              width: 14,
              height: 17,
            },
            text: 'Личный кабинет'
          }
        })