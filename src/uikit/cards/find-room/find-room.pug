mixin find-room(opts)
  .find-room.card
    .card__item
      h3.find-room__title.card__title= (opts.title)
    .card__item
      +air-datepicker-calendar(opts)
    .card__item
      +item-quantity-dropdown(opts.iqDropdown)
    .card__item
      +button-arrow(opts.buttonArrow)

