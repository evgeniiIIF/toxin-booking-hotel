mixin room-card(opts)
  .room-card.card
    +images-slider(opts.images)
    .room-card__body
      .room-card__info
        .room-card__number
          span.room-card__number-numbers= ('№ ' + opts.number + ' ')
          if(opts.characteristic)
            span.room-card__number-characteristic= (opts.characteristic)
        .room-card__price
          span.room-card__price-worth= (opts.worth + '₽ ')
          span.room-card__price-text в сутки
      .card__space-between
        +rate-button(opts.rateButton)
        .room-card__reviews
          span.room-card__reviews-count= (opts.reviewsCount + ' ')
          span.room-card__reviews-text Отзывов

